<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight=".5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick your exercises"
            android:textSize="10pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </RelativeLayout>


    <GridLayout

        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:layout_weight="1"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="3">


        <CheckBox
            android:id="@+id/pushups"
            android:layout_width="142dp"
            android:layout_height="93dp"
            android:layout_weight="1"
            android:onClick="onCheckboxClicked"
            android:text="Pushups" />

        <CheckBox
            android:id="@+id/burpees"
            android:layout_width="124dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:onClick="onCheckboxClicked"
            android:text="Burpees" />

        <CheckBox
            android:id="@+id/squats"
            android:layout_width="124dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:onClick="onCheckboxClicked"
            android:text="Squats" />

        <CheckBox
            android:id="@+id/jumpingJacks"
            android:layout_width="124dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_weight="1"
            android:onClick="onCheckboxClicked"
            android:text="Jumping Jacks" />

        <CheckBox
            android:id="@+id/shoulderPress"
            android:layout_width="124dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:onClick="onCheckboxClicked"
            android:text="Shoulder Press" />

        <CheckBox
            android:id="@+id/mountainClimbers"
            android:layout_width="124dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:onClick="onCheckboxClicked"
            android:text="Mountain Climbers" />

        <CheckBox
            android:id="@+id/lunge"
            android:layout_width="124dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:onClick="onCheckboxClicked"
            android:text="Lunge" />

        <CheckBox
            android:id="@+id/kettleBellSwing"
            android:layout_width="124dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:onClick="onCheckboxClicked"
            android:text="Kettle Bell Swing" />

        <CheckBox
            android:id="@+id/situps"
            android:layout_width="124dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:onClick="onCheckboxClicked"
            android:text="Sit Ups" />


    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="Select your max number of reps"
            android:textSize="10pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:text="0" />


    </LinearLayout>




    <TextView
        android:id="@+id/exerciseView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:text=""
        android:textSize="25dp" />

    <Button
        android:id="@+id/workout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Begin Workout!"
        android:textSize="25dp"
        android:visibility="visible" />


</LinearLayout>


